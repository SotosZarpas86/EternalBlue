@page "/signin"
@using EternalBlue.Web.Models

<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/tailwindcss@@^1.0/dist/tailwind.min.css" rel="stylesheet">
</head>
<body style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;">
    <div style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;" class="container">
        <div class="w-full max-w-xs">
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                @if (IsMainPageDisplayed)
                {
                    <div class="pb-4">
                        <div class="font-bold text-xl mb-2">Welcome to EternalBlue</div>
                        <p class="text-gray-700 text-base">
                            The riddle is to find the correct password
                        </p>
                    </div>
                    <EditForm Model="@SignInModel" OnValidSubmit="@HandleMainPageValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-4">
                            <label class="block text-gray-700 text-sm font-bold mb-2" for="Password">Password</label>
                            <input id="password" name="password" type="hidden" value="98 108 117 101 98 49 117 101 66 108 117 101">
                            <InputText class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="pass" name="pass" type="text" @bind-Value="SignInModel.Passowrd" />
                        </div>
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                            Login
                        </button>
                    </EditForm>
                }
                @if (IsTwoStepAuthenticationDisplayed)
                {
                    <div class="pb-4">
                        <div class="font-bold text-xl mb-2">Two step authentication</div>
                        <div class="pb-4">
                            <p class="text-green-500 text-base">
                                Congrats, you got it!
                            </p>
                            <p class="text-gray-700 text-base">
                                Let's try another one, the answer is inside:
                            </p>
                        </div>
                        <div class="pb-4">
                            <img src="/img/BlueHint.jpg" />
                        </div>
                        <p class="text-gray-700 text-base">
                            Please insert the second password:
                        </p>
                    </div>
                    <EditForm Model="@SignInModel" OnValidSubmit="@HandleTwoStepAuthenticationValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-4">
                            <label class="block text-gray-700 text-sm font-bold mb-2" for="Password">Password</label>
                            <input id="password" name="password" type="hidden" value="98 108 117 101 98 49 117 101 66 108 117 101">
                            <InputText class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="pass" name="pass" type="text" @bind-Value="SignInModel.Passowrd" />
                        </div>
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                            Login
                        </button>
                    </EditForm>
                }
                @if (IsDownloadDisplayed)
                {
                    <div class="pb-4">
                        <p class="text-gray-700 text-base">
                            Wow well done, you have successfully logged in!
                        </p>
                        <p class="mt-2 text-gray-700 text-base">
                            You can download the file, by clicking on the button below:
                        </p>
                        <div class="mt-4">
                            <a class="bg-green-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" href="sample-data/Task.md">Download</a>
                        </div>
                    </div>
                }
            </div>
            <p class="text-center text-gray-500 text-xs">
                ©2020 IFS. All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>